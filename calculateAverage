#include <stdio.h>
#include "iostream"
#include "fstream"
#include "string"
#include "ctime"
#include "limits"

using namespace std;

// As we haven't studied references yet, So I will not include that part

int getScore(int score){
    if(score < 0 || score > 100){
        return 0;
    }
    else{
        return score;
    }
}

void calcAverage(int scores[5]){
    int min = scores[0],index = 0;
    float avg=0;
    for (int i = 0; i<5; i++) {
        if (min > scores[i]) {
            index = i;
            min = scores[i];
        }
    }
    for (int i = 0; i<5; i++) {
        if (i == index) {
            continue;
        }
        avg += scores[i];
    }
    cout << "Average is : " << avg/4 << endl;
}


int main(){
    srand(time(0));
    cout << "Please enter 5 scores " << endl;
    int scores[5];
    for (int i = 0; i<5; i++) {
        cout << "Please enter score " << i + 1 << " : "<<endl;
        cin >> scores[i];
        scores[i] = getScore(scores[i]);
    }
    calcAverage(scores);
    return 0;
}
